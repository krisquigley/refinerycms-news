<div class="row">
  <div class="col-xs-12">
    <%= render 'refinery/shared/breadcrumbs' %>
    <%= render 'refinery/shared/second_level_nav' %>
  </div>
</div>
<div class="row show__content">
  <div class="col-xs-12">
  <% if !@page.parent.nil? %><h2 class="show__content__heading"><%= @page.title %></h2><% end %>
  <article class="news_item">
    <h2><%= @item.title %><br/>
      <small><%= t('.published') %> <%= l(@item.publish_date, :format => :short) %></small>
    </h2>
    <% if @item.source.present? %>
      <p>
        <small><%= t('.source') %> <%= @item.source %></small>
      </p>
    <% end %>
    <%= @item.body.html_safe %>
    <p>
      <%= link_to t('.back_to_index'), refinery.news_items_path %>
    </p>
  </article>
</div>
</div>
